{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "types": [
      "hammerjs",
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "public/js/app"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
